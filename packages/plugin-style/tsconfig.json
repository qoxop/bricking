{
  "include": ["src", "index.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  }
}
