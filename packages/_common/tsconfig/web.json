{
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": ["**/node_modules/**/*", "**/dist/**/*", "**/lib/**/*"],
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": ["ES2018", "dom"]
  }
}