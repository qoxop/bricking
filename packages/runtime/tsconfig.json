{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/*", "global.d.ts"],
  "exclude": ["node_module", "dist"],
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": ["ES2018", "dom"]
  }
}
