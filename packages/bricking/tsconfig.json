{
  "include": ["src/**/*"],
  "exclude": ["node_module", "dist"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES6",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "lib": ["ES2018", "dom"],
    "typeRoots": ["node_modules/@types"]
  }
}