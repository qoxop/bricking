{
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": ["**/node_modules/**/*", "**/dist/**/*", "**/lib/**/*"],
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  }
}